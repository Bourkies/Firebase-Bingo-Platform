rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // By default, allow public read access for all files.
    // This is suitable for board images, stamps, etc. that need to be displayed publicly.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Restrict write access to the 'config' folder to Admins only.
    // This is where the setup page uploads the board background and stamps.
    match /config/{allPaths=**} {
      allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
  }
}